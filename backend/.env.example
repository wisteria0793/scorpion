# Beds24 API Credentials
BEDS24_USERNAME=YourBeds24Username
BEDS24_PASSWORD=YourBeds24Password

# Django settings
# IMPORTANT: Do not use this secret key in production. Generate a new one.
SECRET_KEY=your_django_secret_key_here
# Set DEBUG to False in production
DEBUG=False

# Database settings (example for PostgreSQL). If not provided, SQLite is used.
# DATABASE_URL=postgres://user:password@host:port/dbname

# Allowed hosts (comma-separated). Example: example.com,api.example.com
ALLOWED_HOSTS=your-backend.example.com

# CORS and CSRF trusted origins (comma-separated)
# Example: https://your-frontend.vercel.app,https://www.yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:5173
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# If your app is behind a proxy that sets X-Forwarded-Proto to https
# USE_X_FORWARDED_HOST=True

# Stripe API keys
STRIPE_API_KEY=your_stripe_api_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Google API credentials
GOOGLE_API_KEY=your_google_api_key

# Slack Webhook URL
SLACK_WEBHOOK_URL=your_slack_webhook_url
